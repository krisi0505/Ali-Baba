<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.krisi.alibaba">

    <application
        android:name=".SqliteApp"
        android:allowBackup="true"
        android:icon="@drawable/chest"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InstructionsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ScoresActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SavingActivity"
            android:screenOrientation="portrait"></activity>
        <meta-data android:name="DATABASE" android:value="high_scores.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.project.krisi" />
    </application>

</manifest>